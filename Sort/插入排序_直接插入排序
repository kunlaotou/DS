#include <iostream> 
using namespace std;
#define MaxSize 100


//直接插入排序 
void DirectInsertSort(int sortNum[], int n){	
	for(int i = 1; i < n - 1; i++){
    //开始进行单趟排序
		int end = i;                  //在待排序数组的下标end之前的元素都是有序的 
		int tmp = sortNum[end + 1];   //tmp代表无序序列的第一个元素 
		while(end >= 0){
			if(sortNum[end] > tmp){
				sortNum[end + 1] = sortNum[end];
				end--;
			}	
			else
				break;
		}
		sortNum[end + 1] = tmp;	
	}		
}



int main() {
	
// 手动输入待排序数组
//	int i, n, nums[MaxSize+1];
//	cout<<"请输入数列中的元素个数n为："<<endl;
//	cin>>n;
//	cout<<"请依次输入数列中的元素："<<endl;
//	for(i = 0; i < n; i++)
//		cin>>nums[i];
//	DirectInsertSort(nums, n);


//自动输入待排序数组 
    int i, n=8, nums[8] = {12, 32, 42, 1, 99, 29, 88, 6};
	DirectInsertSort(nums, n);

	cout << "直接插入排序结果：" << endl;
	for(i = 0; i < n; i++)
		cout << nums[i] << " ";
	return 0;
}
